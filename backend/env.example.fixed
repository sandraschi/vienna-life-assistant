# Vienna Life Assistant - Environment Configuration
# Copy this file to .env and configure your settings

# ============================================================================
# DATABASE
# ============================================================================
DATABASE_URL=postgresql://vla_user:vla_dev_password_change_in_production@postgres:5432/vienna_life
REDIS_URL=redis://redis:6379/0

# ============================================================================
# SECURITY
# ============================================================================
SECRET_KEY=dev-secret-key-change-in-production
ENVIRONMENT=development

# ============================================================================
# MICROSOFT GRAPH (Calendar Integration)
# ============================================================================
MICROSOFT_CLIENT_ID=your-client-id-here
MICROSOFT_CLIENT_SECRET=your-client-secret-here

# ============================================================================
# MCP SERVER PATHS (STDIO Transport - Correct Method!)
# ============================================================================
# MCP servers are spawned as processes via stdio, NOT HTTP!
# Provide the path to each MCP server's main script

# Plex Media Server MCP (50,000+ anime/movies)
PLEX_MCP_PATH=D:/Dev/repos/plex-mcp/src/plex_mcp/server.py
PLEX_URL=http://goliath:32400
PLEX_TOKEN=your-plex-token-here

# Calibre MCP (15,000+ ebooks)
CALIBRE_MCP_PATH=D:/Dev/repos/calibre-mcp/src/calibre_mcp/server.py
CALIBRE_URL=http://goliath:8083
CALIBRE_USERNAME=your-calibre-username
CALIBRE_PASSWORD=your-calibre-password

# Immich MCP (Photo Management)
IMMICH_MCP_PATH=D:/Dev/repos/immich-mcp/src/immich_mcp/server.py
IMMICH_URL=http://goliath:2283
IMMICH_API_KEY=your-immich-api-key-here

# Tapo Camera MCP (Home Security)
TAPO_MCP_PATH=D:/Dev/repos/tapo-camera-mcp/src/tapo_camera_mcp/server.py
TAPO_USERNAME=your-tapo-username
TAPO_PASSWORD=your-tapo-password

# Ollama/Local LLM MCP (Local AI)
OLLAMA_MCP_PATH=D:/Dev/repos/local-llm-mcp/src/local_llm_mcp/server.py
OLLAMA_MODEL=llama3.2:3b

# ============================================================================
# CORS CONFIGURATION
# ============================================================================
CORS_ORIGINS=http://localhost:5173,http://localhost:9173

# ============================================================================
# DEVELOPMENT
# ============================================================================
DEBUG=true
LOG_LEVEL=INFO

